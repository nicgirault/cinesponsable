md-tabs.md-primary(md-stretch-tabs="always")
  md-tab(ui-sref="base.tabs.theaters" md-active="state.current.data.tab == 'theaters'") Salles
  md-tab(ui-sref="base.movieList" md-active="state.current.data.tab == 'movies'") Films

md-content(ui-view layout="column" flex="grow" style="height: 100%")

md-tabs(md-stretch-tabs="always" md-no-ink-bar="true")
  md-tab(ui-sref="base.tabs.map" md-active="state.current.data.tab == 'map'")
    md-icon(md-svg-icon='map-marker-circle')
  md-tab(ui-sref="base.tabs.theaters" md-active="state.current.data.tab == 'theaters'")
    md-icon(md-svg-icon='magnify')
  md-tab(ui-sref="base.favorites" md-active="state.current.data.tab == 'movies'" ng-disabled="true")
    md-icon(md-svg-icon='heart')
