div(
  flex="grow" layout="row" layout-align="space-around center"
  ng-if="!ready"
)
  md-progress-circular(md-mode="indeterminate")

div.md-padding.center(
  ng-if="ready && theaters.length === 0"
  flex
  layout="column" layout-align="center center"
)
  h3.md-headline Vous n'avez pas encore de cinémas favoris.
  p.md-caption Ajoutez vos cinémas favoris pour voir rapidement les films et séances de ces cinémas.
md-list(
  ng-if="ready"
)
  md-list-item.md-2-line(
    ng-repeat="theater in theaters"
    ng-click="showtime(theater)"
  )
    .md-list-item-text
      h3 {{ theater.name }}
      p {{ theater.address }}, {{ theater.postalCode }} {{ theater.city }}
      md-icon.md-secondary(
        aria-label="favorites"
        md-svg-icon="star"
        ng-class="{'active': favorites[theater.id]}"
        ng-click="toggleFavorites(theater.id)"
      )
      
