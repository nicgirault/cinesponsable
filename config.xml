<?xml version='1.0' encoding='utf-8'?>
<widget id="org.indecine.app" version="1.0.11" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>IndéCiné</name>
    <description>
        Trouver une séance dans un cinéma indépendant
    </description>
    <author email="nic.girault@gmail.com">
        Nicolas Girault
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <icon src="src/assets/images/logo.png" />
    <platform name="android">
        <splash src="src/assets/images/splash/screen-ldpi-portrait.png" platform="android" qualifier="ldpi" />
        <splash src="src/assets/images/splash/screen-mdpi-portrait.png" platform="android" qualifier="mdpi" />
        <splash src="src/assets/images/splash/screen-hdpi-portrait.png" platform="android" qualifier="hdpi" />
        <splash src="src/assets/images/splash/screen-xhdpi-portrait.png" platform="android" qualifier="xhdpi" />
        <preference name="FadeSplashScreen" value="false"/>
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="ShowSplashScreenSpinner" value="false" />
    </platform>



    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
